//Program to merge two arrays of different size

#include<iostream>
using namespace std;
int main()
{
    int i,j,k,p;
    int arr1[5],arr2[6],arr3[12];
    cout<<"Enter the values in array1 of size 5"<<endl;
    for (i=0;i<5;i++)
    {
        cin>>arr1[i];
    }

        cout<<"Enter the values in array2 of size 6"<<endl;
    for (j=0;j<6;j++)
    {
        cin>>arr2[j];
    }

        cout<<"The merged array is -->"<<endl;
    for (k=0;k<5;k++)
    {
        arr3[k]=arr1[k];
        cout<<arr3[k]<<endl;
    }
    for (k=5,p=0;k<11,p<6;k++,p++)
    {
        arr3[k]=arr2[p];
        cout<<arr3[k]<<endl;
    }
    return 0;
}
