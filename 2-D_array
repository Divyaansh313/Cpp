//implementing 2-D array in Cpp
#include<iostream>
using namespace std;
class Matrix
{
	int a[2][2];
	
	public:
	void get()
	{
		cout<<"Enter the 4 elements of 2X2 matrix"<<endl;
		for(int r=0; r<2; r++)
		for(int c=0; c<2; c++)
			cin>> a[r][c];
	}

		void operator +(Matrix o)
	{
		int sum[2][2];
		Matrix obj;
		for(int r=0; r<2; r++)
		for(int c=0; c<2; c++)
			sum[r][c]=a[r][c] + obj.a[r][c];

		cout<<"Sum of matrices: "<<endl;
		for(int r=0; r<2; r++)
		{
			for(int c=0; c<2; c++)
				cout<< sum[r][c]<<"\t";
			cout<<endl;
		}
	}
};
