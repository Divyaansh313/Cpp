//Program to demonstrate acids and molecular masses

#include <iostream>
using namespace std;
class hydrogen;
class sulphur;
class oxygen
{
private:
    float mm_oxygen;
public:
    oxygen()
    {
        mm_oxygen=15.999;
    }
    friend void chemical_compound(oxygen,hydrogen,sulphur);
};
class hydrogen
{
private:
    float mm_hydrogen;
public:
    hydrogen()
    {
        mm_hydrogen=1.00794;
    }
    friend void chemical_compound(oxygen,hydrogen,sulphur);
};
class sulphur
{
private:
    float mm_sulphur;
public:
    sulphur()
    {
        mm_sulphur=98.709f;
    }
    friend void chemical_compound(oxygen,hydrogen,sulphur);
};
