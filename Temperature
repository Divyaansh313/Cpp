//Program to convert temperature

#include<iostream>
using namespace std;

class Temperature
{
	protected:
		float c,f;
	public:
		Temperature(float x){
			c=x;
		}
		void calculate(){
			f=c*4.5+32;
			cout<< "Temperature in Fahrenheit : "<<f<<endl;
		}

};

class Temp: public Temperature
{
	protected:
		float k;
	public:
		Temp(float x):Temperature(x){}
		void calculate(){
			k=273+(f-32)/4.5;
			cout<< "Temperature in Kelvin : "<<k<<endl;
		}

};
