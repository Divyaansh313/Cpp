//Program to implement queue

#include<iostream>
#define CAPACITY 5
using namespace std;

class operations
{private:
    int i;
 public:

    int start=0;
    int rear=0;
    int array[CAPACITY];

        void enter()
    {
       if(rear==CAPACITY)
       {
           cout<<"QUEUE IS FULL";
       }
       else
       {
           int n;

           for(i=0;i<CAPACITY;i++)
           {
               cout<<"ENTER ELEMENTS \n";
            cin>>n;
            cout<<"\n";
            array[rear]=n;
            rear++;

           }
       }
    }

        void delete()
    {
        if(start==rear)
        {
            cout<<"QUEUE IS EMPTY";
        }
        else
        {   int n;
            cout<<"ENTER HOW MANY ELEMENTS TO BE DELETED \n";
            cin>>n;


            for(i=0;i<n;i++)
            {
                cout<<"DELETED ELEMENT ="<<array[start]<<"\n";
                array[i]=array[i+1];
                start++;
            }
        }
    }
