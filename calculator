#include<iostream>
#include<math.h>
using namespace std;
class CALC
{
        public:
                int a, b;

        void sum()
        {
        	int sum;
                sum = a + b;
        }
        void diff()
        {
        	int diff;
                diff = a - b;
        }
        void multiply()
        {
        	int multiply;
                multiply = a * b;
        }
        void divide()
        {
        	int divide;
                divide = a / b;
        }

	void display()
        {
                cout<<"enter two values"<<endl;
                cin>>a,b;
                int i;
                cout<<"Choose the case"<<endl;
                cin>>i;

                switch(i)
                {
                	case 1:
                		sum();
                		break;
			
			case 2:
                		diff();
                		break;

			case 3:
                		multiply();
                		break;

			case 4:
                		divide();
                		break;


		}
        }
};
